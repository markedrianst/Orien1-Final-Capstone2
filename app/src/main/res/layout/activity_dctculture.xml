<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#35616E"
    android:fitsSystemWindows="true"
    tools:context=".Dctculture">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/rectangleContainer"
        android:layout_width="420dp"
        android:layout_height="120dp"
        android:background="@drawable/rounded_header"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/circular_button"
            android:contentDescription="@string/back"
            android:src="@drawable/back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/btnHome"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="43dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/circular_button"
            android:contentDescription="@string/home"
            android:src="@drawable/home"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/lessonsText"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="I - The Dominican College \nof Tarlac Culture"
            android:textColor="#468288"
            android:textSize="20dp"
            android:textStyle="bold"
            android:fontFamily="@font/poppins_italic"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollContent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@+id/rectangleContainer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- First Image -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"

                android:layout_marginTop="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/nicholas" />
            </androidx.cardview.widget.CardView>

            <!-- Title Text -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:text="San Nicolas Academy"
                android:fontFamily="@font/poppins_bold"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- Description Text -->
            <TextView
                android:id="@+id/descriptionText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginStart="16dp"
                android:fontFamily="@font/poppins_light"
                android:textColor="@color/white"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:textSize="18sp"
                android:justificationMode="inter_word" />

            <!-- Second Image -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/olddct" />
            </androidx.cardview.widget.CardView>

            <!-- Title Text -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:text="Dominican School"
                android:fontFamily="@font/poppins_bold"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/descriptionText1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginStart="20dp"
                android:fontFamily="@font/poppins_light"
                android:textColor="@color/white"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="16dp"
                android:textSize="18sp"
                android:justificationMode="inter_word" />


            <!-- Third Image -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/newdct" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/poppins_bold"
                android:textColor="@color/white"
                android:text="Dominican College of Tarlac"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/descriptionText2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/poppins_light"
                android:textColor="@color/white"
                android:layout_marginBottom="16dp"
                android:textSize="18sp"
                android:justificationMode="inter_word" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:text="Gravissimum Educationis"
                android:textSize="25sp"
                android:textColor="@color/white"
                android:fontFamily="@font/poppins_bold"
                android:textStyle="bold"
                android:gravity="center"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/descriptionText3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/poppins_light"
                android:textColor="@color/white"
                android:layout_marginBottom="16dp"
                android:textSize="18sp"
                android:justificationMode="inter_word" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:text="The Order of Preachers and the Sisters Who Headed the School"
                android:textSize="25sp"
                android:fontFamily="@font/poppins_light"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:gravity="center"
                android:textAlignment="center" />

            <TextView
                android:text="Religious Sisters who served as principals include:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/poppins_light"
                android:textColor="@color/white"
                android:layout_marginBottom="16dp"
                android:textSize="18sp"
                android:justificationMode="inter_word" />


            <TextView
                android:id="@+id/sistersTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:textSize="18sp"
                android:fontFamily="@font/poppins_light"
                android:textColor="@color/white"
                android:justificationMode="inter_word" />


                <androidx.cardview.widget.CardView
                    android:layout_width="170dp"
                    android:layout_height="170dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_gravity="center_horizontal"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="6dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/sister" />
                </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:fontFamily="@font/poppins_light"
                android:textColor="@color/white"                android:layout_marginEnd="16dp"
                android:text="Sr. Ma. Alelee M. Masanque, OP"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center"
                android:textAlignment="center" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/poppins_light"
                android:textColor="@color/white"
                android:text="Present School Administrator\n2021 to Present"
                android:textSize="18sp"
                android:gravity="center"
                android:textAlignment="center"  />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:fontFamily="@font/poppins_bold"
                android:textColor="@color/white"
                android:layout_marginEnd="16dp"
                android:text="The DCT Philosophy and the Logogram"
                android:textSize="25sp"
                android:textStyle="bold"
                android:gravity="center"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/descriptionText4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/poppins_light"
                android:textColor="@color/white"
                android:layout_marginBottom="16dp"
                android:textSize="18sp"
                android:justificationMode="inter_word" />


            <TextView
                android:id="@+id/philoed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:textSize="18sp"
                android:fontFamily="@font/poppins_light"
                android:textColor="@color/white"
                android:justificationMode="inter_word" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:text="DCT LOGORAM"
                android:textSize="25sp"
                android:fontFamily="@font/poppins_bold"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:gravity="center"
                android:textAlignment="center" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <!-- Image on the left -->
                <ImageView
                    android:id="@+id/myImage"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/dctlogo"
                    android:scaleType="centerCrop"
                    android:layout_marginEnd="16dp" />

                <!-- Text on the right -->
                <TextView
                    android:id="@+id/myText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="The school logo, by itself, attests to the identity of the Dominican College of Tarlac – the character it manifests in the socio-cultural and psycho-spiritual awareness of the people invariably connected with it."
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins_light"
                    android:textColor="@color/white"
                    android:justificationMode="inter_word" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:text="The logo emphasizes three virtues:"
                android:textSize="18sp"
                android:fontFamily="@font/poppins_light"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/valuesTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="10dp"
                android:textSize="18sp"
                android:fontFamily="@font/poppins_light"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:justificationMode="inter_word" />

            <TextView
                android:id="@+id/descriptionText5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:textSize="18sp"
                android:fontFamily="@font/poppins_light"
                android:textColor="@color/white"
                android:justificationMode="inter_word" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:text="Objectives"
                android:textSize="25sp"
                android:textStyle="bold"
                android:gravity="center"
                android:fontFamily="@font/poppins_light"
                android:textColor="@color/white"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/outcomesTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:textSize="16sp"
                android:lineSpacingExtra="4dp"
                android:fontFamily="@font/poppins_light"
                android:textColor="@color/white"
                android:justificationMode="inter_word"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:text="Vision"
                android:textSize="25sp"
                android:textStyle="bold"
                android:gravity="center"
                android:fontFamily="@font/poppins_bold"
                android:textColor="@color/white"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/descriptionText6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:textSize="18sp"
                android:fontFamily="@font/poppins_light"
                android:textColor="@color/white"
                android:justificationMode="inter_word" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:text="Mission"
                android:textSize="25sp"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_bold"
                android:textColor="@color/white"
                android:gravity="center"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/descriptionText7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/poppins_light"
                android:textColor="@color/white"
                android:layout_marginBottom="16dp"
                android:textSize="18sp"
                android:justificationMode="inter_word" />


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
